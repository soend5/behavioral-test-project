  "sop_definitions": [
    {
      "sop_id": "sop_pre_impulsive",
      "sop_name": "冲动型（解释期）",
      "sop_stage": "pre",
      "status": "active",
      "priority": 10,
      "state_summary": "容易一冲动就下单，事后才发现没想清楚",
      "core_goal": "帮助用户意识到冲动操作的代价，建立「先想清楚再动手」的习惯",
      "strategy_list": [
        "用具体案例让用户回忆冲动操作的后果",
        "引导用户说出自己的「冲动信号」",
        "提供简单的「暂停三秒」技巧"
      ],
      "forbidden_list": [
        "批评用户「你太冲动了」",
        "暗示某种操作一定能赚钱",
        "催促用户立刻改变"
      ],
      "talk_tracks": [
        "你有没有发现，很多时候一冲动买完，回头看其实没想清楚？",
        "下次想动手之前，能不能先问自己一句：我为什么要买？",
        "不着急，咱们先把你最容易冲动的场景找出来。"
      ],
      "questions": [
        "你最近一次冲动操作是什么时候？当时是什么让你忍不住？",
        "如果给你三秒钟重新选，你会怎么做？"
      ],
      "next_action": "加入陪跑解读，一起找出你的「冲动触发点」",
      "risk_notes": [
        "不要用「你这样肯定亏」等绝对化表述",
        "避免暗示任何具体买卖时机"
      ],
      "evidence_display": ["冲动操作", "情绪波动大", "执行不稳定"],
      "notes": "seed: v1.2 sop for impulsive pre-stage users"
    },
    {
      "sop_id": "sop_pre_hesitant",
      "sop_name": "犹豫型（解释期）",
      "sop_stage": "pre",
      "status": "active",
      "priority": 10,
      "state_summary": "想得太多、动得太慢，经常错过机会又后悔",
      "core_goal": "帮助用户区分「合理谨慎」和「过度犹豫」，建立适度行动的信心",
      "strategy_list": [
        "肯定用户的谨慎是优点",
        "引导用户回忆因犹豫错过的机会",
        "提供「小步试错」的思路"
      ],
      "forbidden_list": [
        "催促用户「你应该更果断」",
        "暗示某个机会一定不能错过",
        "用别人的成功案例施压"
      ],
      "talk_tracks": [
        "谨慎是好事，但有时候想太多反而更纠结，你有这种感觉吗？",
        "你觉得自己是「想清楚了不敢动」还是「一直想不清楚」？",
        "咱们可以先从小的开始，不用一步到位。"
      ],
      "questions": [
        "你最近一次犹豫太久错过的机会是什么？",
        "如果当时只用很小的仓位试一下，你会不会更敢动？"
      ],
      "next_action": "联系助教，一起梳理你的「决策卡点」在哪里",
      "risk_notes": [
        "不要暗示「早点买就赚了」",
        "避免用具体收益数字举例"
      ],
      "evidence_display": ["决策犹豫", "风险敏感", "机会错过"],
      "notes": "seed: v1.2 sop for hesitant pre-stage users"
    },
